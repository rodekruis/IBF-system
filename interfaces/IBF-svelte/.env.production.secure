# Production environment with Azure AD security
VITE_API_URL=https://api.ibf-system.org/api
VITE_GEOSERVER_URL=https://geoserver.ibf-system.org
VITE_APP_TITLE=IBF Dashboard

# Azure AD Configuration
VITE_AZURE_CLIENT_ID=your-azure-app-client-id
VITE_AZURE_TENANT_ID=your-azure-tenant-id
VITE_AZURE_REDIRECT_URI=https://your-ibf-domain.com/auth/callback
VITE_AZURE_SCOPES=openid profile email

# Security Configuration
VITE_EMBED_ALLOWED_ORIGINS=https://your-espocrm-domain.com,https://staging-espocrm.com
VITE_REQUIRE_AUTH=true
VITE_VALIDATE_JWT=true
VITE_CORS_DOMAINS=https://your-espocrm-domain.com

# CSP Configuration  
VITE_CSP_FRAME_ANCESTORS=https://your-espocrm-domain.com
VITE_DEBUG=false
