{
  "name": "ibf-lightweight-frontend",
  "version": "1.0.0",
  "description": "Lightweight IBF dashboard for embedding",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:embed": "vite build --mode embed",
    "build:secure": "cross-env NODE_ENV=production vite build --mode production",
    "build:analyze": "cross-env ANALYZE=true vite build",
    "preview": "vite preview",
    "preview:secure": "vite preview --mode production --host 0.0.0.0 --port 4173",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:security": "vitest run --config vitest.security.config.ts",
    "test:e2e": "playwright test",
    "coverage": "vitest run --coverage",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "analyze": "npx vite-bundle-analyzer",
    "audit:security": "npm audit --audit-level moderate",
    "docker:build": "docker build -f Dockerfile.production -t ibf-dashboard:latest .",
    "docker:run": "docker run -p 80:80 -p 443:443 ibf-dashboard:latest",
    "health-check": "curl -f http://localhost:4173/health || exit 1"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/leaflet": "^1.9.8",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "jsdom": "^23.2.0",
    "playwright": "^1.41.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.0.0",
    "vite": "^5.4.19",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "leaflet": "^1.9.4"
  },
  "engines": {
    "node": ">=18"
  }
}
