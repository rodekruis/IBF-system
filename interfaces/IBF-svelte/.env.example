# IBF Dashboard Configuration
# Copy this file to .env.local to override defaults

# =============================================================================
# API Configuration
# =============================================================================

# Set to true to use real IBF API instead of mock data
VITE_USE_IBF_API=false

# Set to true to use mock data (overrides IBF API when both are enabled)
VITE_USE_MOCK_DATA=true

# Custom API URL (if you have your own backend)
VITE_API_URL=http://localhost:3000/api

# =============================================================================
# IBF API Authentication
# =============================================================================

# IBF API credentials (required when VITE_USE_IBF_API=true)
# Contact 510.global team for valid credentials
VITE_IBF_API_EMAIL=your-ibf-email@example.com
VITE_IBF_API_PASSWORD=your-ibf-password

# =============================================================================
# Authentication Configuration
# =============================================================================

# Set to true to disable authentication (for development)
VITE_DISABLE_AUTHENTICATION=true

# Azure AD Configuration (get these from your Azure AD app registration)
VITE_AZURE_CLIENT_ID=
VITE_AZURE_TENANT_ID=
VITE_AZURE_REDIRECT_URI=http://localhost:5173/auth/callback
VITE_AZURE_SCOPES=openid profile email

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode for detailed logging
VITE_DEBUG_MODE=true

# Show debug panel in UI
VITE_SHOW_DEBUG_PANEL=true

# =============================================================================
# To use IBF API instead of mock data:
# =============================================================================
# 1. Get IBF API credentials from 510.global team
# 2. Set VITE_IBF_API_EMAIL and VITE_IBF_API_PASSWORD
# 3. Set VITE_USE_IBF_API=true
# 4. Set VITE_USE_MOCK_DATA=false
# 5. The system will automatically login and use the token for API calls
# =============================================================================
