{
    "fields": {
        "name": {
            "type": "varchar",
            "required": false,
            "pattern": "$noBadCharacters",
            "options": []
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "dischargeLevel": {
            "type": "int",
            "isCustom": true,
            "required": true,
            "min": 0
        },
        "thresholdComparison": {
            "type": "int",
            "readOnly": true,
            "tooltip": true,
            "isCustom": true
        },
        "dischargeReport": {
            "type": "link"
        },
        "riverStation": {
            "type": "link",
            "required": true
        },
        "alertLevel": {
            "type": "enum",
            "options": [
                "Red",
                "Orange",
                "Yellow",
                "Green",
                ""
            ],
            "style": {
                "Red": "danger",
                "Orange": "warning",
                "Yellow": "warning",
                "Green": "success",
                "": "success"
            },
            "readOnly": true,
            "displayAsLabel": true,
            "maxLength": 100,
            "isCustom": true,
            "default": null
        },
        "reportingDate": {
            "notNull": false,
            "type": "date",
            "required": false,
            "isCustom": true,
            "readOnly": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        },
        "dischargeReport": {
            "type": "belongsTo",
            "foreign": "dischargeReportRecords",
            "entity": "CDischargeReport",
            "audited": false,
            "isCustom": true
        },
        "riverStation": {
            "type": "belongsTo",
            "foreign": "dischargeReportRecords",
            "entity": "CRiverStation",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc",
        "textFilterFields": [
            "name"
        ],
        "fullTextSearch": false,
        "countDisabled": false
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
    },
    "optimisticConcurrencyControl": false
}