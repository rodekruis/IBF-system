{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/web-component",
    "types": ["node"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler"
  },
  "files": [
    "src/main-angular-web-component.ts",
    "src/polyfills-web-component.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/main.ts",
    "src/polyfills.ts",
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/**/main-web-component.ts",
    "src/**/main-simple-web-component.ts",
    "src/**/main-minimal-web-component.ts",
    "src/**/main-ultra-minimal-web-component.ts"
  ]
}
