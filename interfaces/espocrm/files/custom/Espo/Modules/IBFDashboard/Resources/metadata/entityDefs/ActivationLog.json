{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "maxLength": 255,
            "tooltip": "Area name from activation log"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "countryCodeISO3": {
            "type": "varchar",
            "required": true,
            "maxLength": 3,
            "tooltip": "Country ISO3 code (e.g., ETH)"
        },
        "disasterType": {
            "type": "enum",
            "required": true,
            "options": [
                "drought",
                "floods", 
                "heavy-rainfall",
                "typhoon",
                "malaria",
                "flash-floods"
            ],
            "optionsLabels": {
                "drought": "Drought",
                "floods": "Floods",
                "heavy-rainfall": "Heavy Rainfall",
                "typhoon": "Typhoon", 
                "malaria": "Malaria",
                "flash-floods": "Flash Floods"
            },
            "tooltip": "Type of disaster for this activation"
        },
        "eventName": {
            "type": "varchar",
            "required": true,
            "maxLength": 255,
            "tooltip": "Event name (e.g., Meher JAS_Meher)"
        },
        "placeCode": {
            "type": "varchar",
            "required": true,
            "maxLength": 20,
            "tooltip": "Geographic place code (e.g., ET0101)"
        },
        "firstIssuedDate": {
            "type": "datetime",
            "required": true,
            "tooltip": "Date when the activation was first issued"
        },
        "firstIssuedDateDate": {
            "type": "date",
            "required": false,
            "tooltip": "Date portion of first issued date"
        },
        "closed": {
            "type": "bool",
            "required": true,
            "default": false,
            "tooltip": "Whether the activation is closed"
        },
        "endDate": {
            "type": "datetime",
            "required": false,
            "tooltip": "End date of the activation (null if ongoing)"
        },
        "endDateDate": {
            "type": "date",
            "required": false,
            "tooltip": "Date portion of end date"
        },
        "exposureIndicator": {
            "type": "varchar",
            "required": true,
            "maxLength": 100,
            "tooltip": "Type of exposure indicator (e.g., population_affected)"
        },
        "exposureValue": {
            "type": "int",
            "required": true,
            "tooltip": "Value of the exposure indicator"
        },
        "alertLevel": {
            "type": "enum",
            "required": true,
            "options": [
                "trigger",
                "warning",
                "watch"
            ],
            "optionsLabels": {
                "trigger": "Trigger",
                "warning": "Warning",
                "watch": "Watch"
            },
            "tooltip": "Alert level of the activation"
        },
        "userTrigger": {
            "type": "bool",
            "required": true,
            "default": false,
            "tooltip": "Whether this was manually triggered by a user"
        },
        "userTriggerDate": {
            "type": "datetime",
            "required": false,
            "tooltip": "Date when user manually triggered (null if automatic)"
        },
        "userTriggerDateDate": {
            "type": "date",
            "required": false,
            "tooltip": "Date portion of user trigger date"
        },
        "databaseId": {
            "type": "varchar",
            "required": true,
            "maxLength": 36,
            "tooltip": "Original database ID from IBF system"
        },
        "countryName": {
            "type": "varchar",
            "required": false,
            "maxLength": 100,
            "tooltip": "Country name"
        }
    },
    "links": {
    },
    "collection": {
        "orderBy": "firstIssuedDate",
        "order": "desc"
    },
    "indexes": {
        "countryCodeISO3": {
            "columns": ["countryCodeISO3"]
        },
        "disasterType": {
            "columns": ["disasterType"]
        },
        "placeCode": {
            "columns": ["placeCode"]
        },
        "databaseId": {
            "columns": ["databaseId"],
            "unique": true
        },
        "countryDisaster": {
            "columns": ["countryCodeISO3", "disasterType"]
        },
        "firstIssuedDate": {
            "columns": ["firstIssuedDate"]
        }
    }
}
