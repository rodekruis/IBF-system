{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["es2017"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@scripts/*": ["./src/scripts/*"],
      "@shared/*": ["./src/shared/*"]
    },
    "skipLibCheck": true
  },
  "watchOptions": {
    "watchFile": "fixedPollingInterval",
    "excludeDirectories": ["node_modules", "dist"],
    "excludeFiles": ["**/*.json"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "types": ["jest"],
  "typeAcquisition": { "include": ["jest"] }
}
